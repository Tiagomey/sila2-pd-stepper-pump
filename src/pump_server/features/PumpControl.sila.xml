<Feature xmlns="http://www.sila-standard.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Category="core" FeatureVersion="1.0" MaturityLevel="Draft" Originator="unitelabs" SiLA2Version="1.0" xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
  <Identifier>PumpControl</Identifier>
  <DisplayName>Pump Control</DisplayName>
  <Description>Feature to control a pump via SiLA 2.</Description>

  <Command>
    <Identifier>StartPump</Identifier>
    <DisplayName>Start Pump</DisplayName>
    <Description>Start the pump operation.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Velocity</Identifier>
      <DisplayName>Velocity</DisplayName>
      <Description>Start the pump with given Velocity (steps per second)</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
  </Command>

<Command>
  <Identifier>StopPump</Identifier>
  <DisplayName>Stop Pump</DisplayName>
  <Description>Stop the pump operation.</Description>
  <Observable>No</Observable>
</Command>

<Command>
  <Identifier>GetStatus</Identifier>
  <DisplayName>Get Status</DisplayName>
  <Description>Get Status Information of the Pump</Description>
  <Observable>No</Observable>
</Command>

  <Command>
    <Identifier>SetVelocity</Identifier>
    <DisplayName>Set Velocity</DisplayName>
    <Description>Set the pumping velocity.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Velocity</Identifier>
      <DisplayName>Velocity (steps/s)</DisplayName>
      <Description>Velocity in steps per second used in Target specific commands</Description>
      <DataType>
        <Basic>Real</Basic>
      </DataType>
    </Parameter>
  </Command>

  <Command>
    <Identifier>SetAcceleration</Identifier>
    <DisplayName>Set Acceleration</DisplayName>
    <Description>Set the acceleration of the pump.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Acceleration</Identifier>
      <DisplayName>Acceleration (steps/s²)</DisplayName>
      <Description>Acceleration in steps/s²</Description>
      <DataType>
        <Basic>Real</Basic>
      </DataType>
    </Parameter>
  </Command>

  <Command>
    <Identifier>SetVoltage</Identifier>
    <DisplayName>Set Voltage</DisplayName>
    <Description>Set the voltage supplied to stepper Motor(only 5,9,12,15,20 is allowed).</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Voltage</Identifier>
      <DisplayName>Voltage (V)</DisplayName>
      <Description>Target voltage in volts.</Description>
      <DataType>
        <Basic>Integer</Basic>
      </DataType>
    </Parameter>
  </Command>

  <Command>
    <Identifier>Suck</Identifier>
    <DisplayName>Suck Amount</DisplayName>
    <Description>Suck liquid in ml.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Amount</Identifier>
      <DisplayName>Amount (ml)</DisplayName>
      <Description>Amount in milliliters to suck</Description>
      <DataType>
        <Basic>Real</Basic>
      </DataType>
    </Parameter>
  </Command>

  <Command>
    <Identifier>Pump</Identifier>
    <DisplayName>Pump Amount</DisplayName>
    <Description>Pump liquid in ml.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Amount</Identifier>
      <DisplayName>Amount (ml)</DisplayName>
      <Description>Amount in milliliters to pump</Description>
      <DataType>
        <Basic>Real</Basic>
      </DataType>
    </Parameter>
  </Command>

  <Property>
    <Identifier>PumpStatus</Identifier>
    <DisplayName>Pump Status</DisplayName>
    <Description>Current status of the pump.</Description>
    <Observable>Yes</Observable>
    <DataType>
      <Basic>String</Basic>
    </DataType>
  </Property>
</Feature>
